/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) {
	    	Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		int i=0;
		while(i<a) {
			int b=sc.nextInt();
			int c=sc.nextInt();
			System.out.println(b%c);
			i++;
		}
	

	
	}
}
