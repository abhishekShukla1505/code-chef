// Remember that the class name should be "Main" and should be "public".
public class Main {
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
		//System.out.println("enter");
		int i=sc.nextInt();
		int j=0;
		while(j<i) {
			int a=sc.nextInt();
			int b=sc.nextInt();
			System.out.println(a+b);
			j++;
		}


	}
}
